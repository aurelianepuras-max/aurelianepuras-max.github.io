---
import Layout from '../layouts/Layout.astro';
import PhotoGallery from '../components/PhotoGallery.svelte';
import PageTransition from '../components/PageTransition.svelte';
import { getCollection } from 'astro:content';

const photos = await getCollection('photos');
const sortedPhotos = photos.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Galerie Foto - Aurelian Epuraș">
	<PageTransition client:load>
	<section class="py-20 bg-gradient-to-br from-ivory to-crem dark:bg-dark-primary">
		<div class="container mx-auto px-4">
			<div class="max-w-7xl mx-auto">
				<h1 class="font-serif text-5xl md:text-6xl font-bold mb-6 text-text-primary-light dark:text-text-primary-dark">
					Galerie foto
				</h1>
				<div class="w-24 h-1 bg-text-primary-light dark:bg-text-primary-dark mb-8"></div>
				<p class="text-lg text-text-secondary-light dark:text-text-secondary-dark mb-12 max-w-3xl">
					O colecție de momente speciale capturate de-a lungul carierei mele artistice. Fiecare imagine spune o poveste despre pasiunea pentru muzică și artă.
				</p>

				<PhotoGallery client:load photos={sortedPhotos.map(photo => photo.data)} />
			</div>
		</div>
	</section>
	</PageTransition>
</Layout>
