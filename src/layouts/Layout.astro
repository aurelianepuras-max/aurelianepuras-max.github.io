---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import BackToTop from '../components/BackToTop.svelte';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Aurelian Epuraș - Pianist & Compozitor',
  description = 'Arhiva digitală a artistului Aurelian Epuraș'
} = Astro.props;
---

<!doctype html>
<html lang="ro">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
		<ViewTransitions />
	</head>
	<body class="bg-gradient-to-br from-ivory to-crem dark:bg-dark-primary text-text-primary-light dark:text-text-primary-dark transition-colors">
		<Header />
		<main class="min-h-screen">
			<slot />
		</main>
		<footer class="bg-ivory-light dark:bg-dark-primary border-t border-crem-taupe dark:border-dark-border mt-16">
			<div class="container mx-auto px-4 py-12">
				<div class="max-w-6xl mx-auto">
					<div class="grid md:grid-cols-3 gap-8 mb-8">
						<div>
							<h3 class="font-serif text-xl font-semibold mb-4 text-text-primary-light dark:text-text-primary-dark">Aurelian Epuraș</h3>
							<p class="text-text-secondary-light dark:text-text-secondary-dark text-sm leading-relaxed">
								Muzică clasică și compoziții originale din inima României.
							</p>
						</div>
						<div>
							<h3 class="font-serif text-lg font-semibold mb-4 text-text-primary-light dark:text-text-primary-dark">Navigație</h3>
							<div class="flex flex-col gap-2">
								<a href="/" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Origini</a>
								<a href="/biografie" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Biografie</a>
								<a href="/muzica" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Muzica mea</a>
								<a href="/foto" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Foto</a>
								<a href="/video" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Video</a>
								<a href="/blog" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Blog</a>
								<a href="/contact" class="text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors text-sm">Contact</a>
							</div>
						</div>
						<div>
							<h3 class="font-serif text-lg font-semibold mb-4 text-text-primary-light dark:text-text-primary-dark">Urmărește-mă</h3>
							<div class="flex gap-3">
								<a
									href="https://www.youtube.com/user/Tzupy2001"
									target="_blank"
									rel="noopener noreferrer"
									class="p-2 rounded-full border border-crem-taupe dark:border-dark-border text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors"
									aria-label="YouTube"
								>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
									</svg>
								</a>
								<a
									href="https://www.facebook.com/ultimulvals/"
									target="_blank"
									rel="noopener noreferrer"
									class="p-2 rounded-full border border-crem-taupe dark:border-dark-border text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors"
									aria-label="Facebook"
								>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
									</svg>
								</a>
								<a
									href="https://www.instagram.com/aurelian.epuras/"
									target="_blank"
									rel="noopener noreferrer"
									class="p-2 rounded-full border border-crem-taupe dark:border-dark-border text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors"
									aria-label="Instagram"
								>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
									</svg>
								</a>
							</div>
						</div>
					</div>
					<div class="border-t border-crem-taupe dark:border-dark-border pt-6 text-center">
						<p class="text-text-secondary-light dark:text-text-secondary-dark text-sm">&copy; {new Date().getFullYear()} Aurelian Epuraș. Toate drepturile rezervate.</p>
					</div>
				</div>
			</div>
		</footer>
		<BackToTop client:load />
		<script>
			document.addEventListener('astro:page-load', () => {
				window.scrollTo(0, 0);
			});
		</script>
		<style is:global>
			html {
				scroll-behavior: smooth;
			}

			img {
				opacity: 0;
				animation: fadeInImage 0.8s ease-in forwards;
			}

			@keyframes fadeInImage {
				from {
					opacity: 0;
					transform: translateY(20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (prefers-reduced-motion: reduce) {
				html {
					scroll-behavior: auto;
				}

				img {
					animation: none;
					opacity: 1;
					transform: none;
				}
			}
		</style>
	</body>
</html>
