    <a href={`${base}/biografie`} class="text-2xl font-serif text-text-primary-light dark:text-text-primary-dark hover:text-olive dark:hover:text-olive-light transition-colors">Biografie</a>
    <a href={`${base}/muzica`} class="text-2xl font-serif text-text-primary-light dark:text-text-primary-dark hover:text-olive dark:hover:text-olive-light transition-colors">Muzica mea</a>
