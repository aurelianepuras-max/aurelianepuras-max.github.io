<script>
  function initMobileMenu() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    const menuLinks = mobileMenu?.querySelectorAll('a');

    let isOpen = false;

    function toggleMenu() {
      isOpen = !isOpen;

      if (isOpen) {
        mobileMenu?.classList.remove('translate-x-full');
        mobileMenu?.classList.add('translate-x-0');
        hamburgerIcon?.classList.add('hidden');
        closeIcon?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      } else {
        mobileMenu?.classList.remove('translate-x-0');
        mobileMenu?.classList.add('translate-x-full');
        hamburgerIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        document.body.style.overflow = '';
      }
    }

    mobileMenuBtn?.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      toggleMenu();
    });

    menuLinks?.forEach(link => {
      link.addEventListener('click', () => {
        if (isOpen) {
          toggleMenu();
        }
      });
    });
  }

  initMobileMenu();

  document.addEventListener('astro:after-swap', () => {
    initMobileMenu();
  });

  function handleHeaderScroll() {
    const header = document.getElementById('main-header');

    function updateHeader() {
      if (window.scrollY > 10) {
        header?.classList.add('bg-ivory-light/95', 'dark:bg-dark-primary/95', 'backdrop-blur-md');
        header?.classList.remove('bg-ivory-light', 'dark:bg-dark-primary');
      } else {
        header?.classList.remove('bg-ivory-light/95', 'dark:bg-dark-primary/95', 'backdrop-blur-md');
        header?.classList.add('bg-ivory-light', 'dark:bg-dark-primary');
      }
    }

    updateHeader();
    window.addEventListener('scroll', updateHeader);
  }

  handleHeaderScroll();

  document.addEventListener('astro:after-swap', () => {
    handleHeaderScroll();
  });
</script>
