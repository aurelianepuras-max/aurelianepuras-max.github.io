---
import ThemeToggle from './ThemeToggle.svelte';

const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
---

<style>
  .nav-link {
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: -4px;
    right: -4px;
    height: 2px;
    background-color: #B8860B;
    transform: scaleX(0);
    transform-origin: bottom left;
    transition: transform 0.3s ease-in-out;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  .nav-link.active::after {
    transform: scaleX(1);
  }
</style>

<header id="main-header" class="sticky top-0 z-50 bg-ivory-light dark:bg-dark-primary border-b border-crem-taupe dark:border-dark-border transition-all duration-300">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <div class="flex flex-col">
        <a href={base} class="text-2xl font-serif font-bold text-text-primary-light dark:text-text-primary-dark">
          Aurelian Epuraș
        </a>
        <span class="text-xs text-text-secondary-light dark:text-text-secondary-dark font-light">pianist și compozitor</span>
      </div>

      <div class="hidden md:flex items-center gap-8">
        <a
          href={base}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath === base || currentPath === base.slice(0, -1) ? 'active' : ''}`}
        >
          Origini
        </a>
        <a
          href={`${base}/biografie`}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath === `${base}biografie` || currentPath === `${base}biografie/` ? 'active' : ''}`}
        >
          Biografie
        </a>
        <a
          href={`${base}/muzica`}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath === `${base}muzica` || currentPath === `${base}muzica/` ? 'active' : ''}`}
        >
          Muzica mea
        </a>
        <a
          href={`${base}/foto`}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath === `${base}foto` || currentPath === `${base}foto/` ? 'active' : ''}`}
        >
          Foto
        </a>
        <a
          href={`${base}/video`}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath === `${base}video` || currentPath === `${base}video/` ? 'active' : ''}`}
        >
          Video
        </a>
        <a
          href={`${base}/blog`}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath.startsWith(`${base}blog`) ? 'active' : ''}`}
        >
          Blog
        </a>
        <a
          href={`${base}/contact`}
          class={`nav-link text-text-secondary-light dark:text-text-secondary-dark hover:text-olive dark:hover:text-olive-light transition-colors ${currentPath === `${base}contact` || currentPath === `${base}contact/` ? 'active' : ''}`}
        >
          Contact
        </a>
        <div class="ml-4 pl-4 border-l border-crem-taupe dark:border-dark-border-subtle">
          <ThemeToggle client:load />
        </div>
      </div>

      <div class="md:hidden flex items-center gap-2">
        <ThemeToggle client:load />
        <button id="mobile-menu-btn" class="p-2 rounded-lg hover:bg-crem dark:hover:bg-dark-secondary text-text-primary-light dark:text-text-primary-dark z-50 relative">
          <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

